{
  "compilerOptions" : {
    "target" : "ES6",
    "module" : "commonjs",
    "sourceMap" : true,
    "emitDecoratorMetadata" : true,
    "experimentalDecorators" : true,
    "moduleResolution" : "node",
    "removeComments" : false,
    "noImplicitAny" : true,
    "outDir": "dist",
    "baseUrl": "./",
    "suppressImplicitAnyIndexErrors" : true,
    "types" : []
  },
  "lib": [
    "es2017",
    "dom"
  ],
  "include": [
    "../../src/app/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
